server {
    #listen 80 default_server;
    #listen [::]:80 default_server;

    listen 443 ssl default_server;
    listen [::]:443 ssl default_server;

    server_name AuroraR8-eb5c.andrew.cmu.edu;

    ssl_certificate /etc/letsencrypt/live/aurorar8-eb5c.andrew.cmu.edu/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/aurorar8-eb5c.andrew.cmu.edu/privkey.pem;

    location / {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_pass http://localhost:8080;
    }
}
